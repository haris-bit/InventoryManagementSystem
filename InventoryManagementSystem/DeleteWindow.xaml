<Window x:Class="InventoryManagementSystem.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManagementSystem"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Delete Entry" HorizontalAlignment="Left" Margin="332,23,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="225,164,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="search_txt" HorizontalAlignment="Left" Margin="297,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" Height="35" TextAlignment="Justify" TextChanged="search_txt_TextChanged"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="275,270,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Height="38" Width="80" Click="btnDelete_Click"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="410,270,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Height="38" Width="80" Click="Button_Click"/>

    </Grid>
</Window>
